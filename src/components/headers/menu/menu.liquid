<nav data-id="headers" class="nav" id="nav">
  <div class="container d:flex ai:center jc:space-between maw:100% p:0 bgc:color-gray9">
      <div class="h:60px! ovy:hidden">
        <script class="compare-popup-data" type="application/json">{{ compare_popup | json }}</script>
        <div class="ovx:auto h:80px">
          <ul class="yasmina-{{menu1.name}} yasmina-{{menu1.name}}--1 d:flex ai:center m:0 p:0 h:60px list-style:none pl:15px!@md">
            {% for item in menu1.list %}
              <li class="yasmina-menu__list d:inline-block bdr:1px_solid_color-light">
                <a href={{item.href}} class="yasmina-menu__link--primary w:100% pl:15px pr:15px fz:17px fw:800 cur:pointer c:color-light whs:nowrap">{{item.name}}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div>
        <div class="yasmina-menu__option h:100% d:flex jc:flex-end ai:center c:color-light fz:20px pr:15px pr:30px@md">
          {%- comment -%}
             <div class="veda-toggle-theme cur:pointer mr:10px">mode</div>
          {%- endcomment -%}
          <a href="/login.html"><i class="fal fa-user ml:10px mr:10px cur:pointer c:color-light"></i></a>
          <span class="veda-compare__popup pos:relative cur:pointer" data-options="{
            content: ['Product', 'Rating', 'Description', 'Abd'],
            header: {
              title: 'Compare',
              description: 'Compare description1',
            },
          }">
