
{% set uniqueId = "id_f0034e61-61c8-4eb2-9387-e27e82a78831" %}
{% if general_settings.background_fixed %}
{% set backgroundFixed = 'fixed' %}
{% else %}
{% set backgroundFixed = 'scroll' %}
{% endif %}
{% if general_settings.background_type == 'color' %}
{% set backgroundColor = 'background-color: ' ~  general_settings.background_color ~  ';' %}
{% else %}
{% set backgroundColor = '' %}
{% endif %}
{% if general_settings.background_type == 'image' %}
{% set backgroundImage = 'background-image: url(' ~  general_settings.background_image ~  ');background-attachment: ' ~  backgroundFixed ~  ';background-size: ' ~  general_settings.background_size ~  ';' %}
{% else %}
{% set backgroundImage = '' %}
{% endif %}
{% set sectionPadding = 'padding-top: ' ~  general_settings.padding.top ~  'px;padding-right: ' ~  general_settings.padding.right ~  'px;padding-bottom: ' ~  general_settings.padding.bottom ~  'px;padding-left: ' ~  general_settings.padding.left ~  'px;' %}



<section data-id="products" class="veda-section" css="{{ backgroundColor }}{{ backgroundImage }}{{ sectionPadding }}">
  {% if general_settings.background_overlay_enable %}
    <div class="pos:absolute ins:0 z:-1" css="background-color: {{ general_settings.background_overlay_color }}"></div>
  {% endif %}
  <div class="container">
    <h3 class="ff:font-primary ta:center mb:45px fz:40px fw:500" css="{{ heading.design }}">{{ heading.text }}</h3>

    <div class="row">
      {% set collection = collections[content.collection] %}
      {% set quantity_product_displayed = content.quantity_product_displayed %}
      {% for product in collection.products | slice(0, quantity_product_displayed) %}
        <div class="col-lg-3 mt:0px!" component="product-card">
          <div class="product-card-js d:flex fld:column ai:center ta:center mb:15px pb:15px">
            <script class="product-card-data-js" type="application/json">{{ product | json_encode()}}</script>
            <div class="product-card__img w:100% pos:relative ov:hidden">
              <div class="ov:hidden">
                <a href="/pageproduct.html" class="veda-image-cover d:block" css="--aspect-ratio: 3/4">
                  <img class="product-card-image-js" src="{{ product.featured_image.src | img_url('400x')}}" alt="{{ product.title }}">
                </a>
              </div>
              <div class="product-card__add-content product-card-add-js d:flex jc:center ai:center pos:absolute b:0 l:0 w:100% bgc:color-dark h:50px trf:translateY(50px) trs:all_0.3s ta:center lts:0.15px fw:600 fz:17px cur:pointer fz:17px td:none w:100% c:color-light c:color-light!|h us:none" css="{{add_to_cart_design}}">
                {{content.add_to_cart_text}}
              </div>
              <div class="pos:absolute t:5px l:5px d:flex">
                {% if product.compare_at_price > product.price and content.sale_enable %}
                  <div class="product-card-js__sale d:flex jc:center ai:center w:60px h:30px bgc:#219653 mr:5px bdrs:2px" css="{{ content.sale_design }}">
                    <p class="fz:16px pos:absolute z:10 fw:600 c:color-light">{{ content.sale_text}}</p>
                  </div>
                {% endif %}
              </div>
              <div class="product-card__status pos:absolute t:10px r:10px w:35px h:127px">
                <div class="wishlist-toggle-js pos:relative d:flex ai:center jc:center w:36px h:36px bdrs:50% bgc:color-light fz:17px c:color-gray9 mb:10px cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Add to wishlist" data-tooltip-position="left" data-tooltip-active=true data-tooltip-text="Add to wishlist" data-tooltip-active-text="Remove from wishlist">
                  <i class="fal fa-heart"></i>
                </div>
                <div class="product-card__icon-hidden quickview-toggle-js v:hidden op:0 d:flex ai:center jc:center pos:relative w:36px h:36px bdrs:50% bgc:color-light fz:17px c:color-gray9 mb:10px cur:pointer bgc:color-dark!|h c:color-light!|h v:hidden op:0" data-tooltip="Quick view" data-tooltip-text="Quick view" data-tooltip-position="left" data-tooltip-active=false >
                  <i class="fal fa-eye"></i>
                </div>
                <div class="product-card__icon-hidden compare-toggle-js v:hidden op:0 d:flex ai:center jc:center pos:relative w:36px h:36px bdrs:50% bgc:color-light fz:17px c:color-gray9 mb:10px cur:pointer bgc:color-dark!|h c:color-light!|h v:hidden op:0" data-tooltip="Compare to other products" data-tooltip-position="left" data-tooltip-active=false data-tooltip-text="Add to compare" data-tooltip-active-text="Remove from compare">
                  <i class="fal fa-repeat"></i>
                </div>
              </div>
            </div>


            <div class="product-card-js__content d:flex fld:column jc:center ai:center">
              <div class="product-card-js__brand c:color-gray5 mt:11px fz:14px">{{product.vendor}}</div>
              <a class="product-card-js__name fz:16px mt:15px c:color-dark" href="/pageproduct.html">{{product.title}}</a>
              <a class="product-card-js__price mt:14px" href="#">
                <ins class="product-card-js__cost fw:500 fz:15px c:color-primary td:none">${{ product.price }}.00</ins>
                {% if product.compare_at_price > product.price %}
                  <del class="product-card-js__cost--before fw:500 fz:15px c:#9E9E9E">${{ product.compare_at_price }}.00</del>
                {% endif %}
              </a>

              <div class="product-card-colors-js d:flex h:32px m:10px_4px_0px_4px">
              </div>

            </div>
          </div>
        </div>
      

{% endfor %}



      <div class="col-md-12 ta:center f:flex ai:center">
        <button class="yasmina-btn__primary bgc:color-dark bgc:color-dark!|h bd:none! c:color-light c:color-light!|h p:20px_26px_20px_26px p:20px_86px_20px_86px@md cur:pointer m:5px_5px_5px_5px fw:600 bdrs:0px! fz:17px lts:0.15px w:272px whs:nowrap w:auto">LOAD MORE</button>

      </div>
      </div>
    </div>
  </div>
</section>
