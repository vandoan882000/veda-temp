{% assign backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% assign backgroundColor = general_settings.background_color_enable ? 'background-color:' | append: general_settings.color | append: ';' : '' %}
{% assign backgroundImage = general_settings.background_image_enable ? 'background-image: url(' | append: general_settings.image | append:
');background-attachment:' | append: backgroundFixed | append: ';background-size:' | append: general_settings.size | append: ';' : '' %}


<footer data-id="footers" class="veda-section mih:435px bgc:color-dark pt:55px pb:80px ff:font-secondary c:color-light" css="{{ backgroundColor }}{{ backgroundImage }}">
  <div class="veda-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  <div class="container">
    <div class="row jc:center">
      <div class="col-xs-9 col-sm-6 col-md-5 col-lg-3">
        <div class="nvd-footer__logo ff:font-tertiary fw:700 fz:35px lh:46px pb:20px c:color-light">{{heading.title}}</div>
        <ul class="nvd-footer-list fw:700 pb:25px pl:0 list-style:none pb:20px">
          <li class="nvd-footer-list__list pb:20px c:color-light"><a href="tel:+1234567890" class="nvd-footer-list__link op:0.7 c:color-light fw:400">Call Us: +123-456-7890</a></li>
          <li class="nvd-footer-list__list pb:20px c:color-light"><a href="mailto:Info@example.com" class="nvd-footer-list__link op:0.7 c:color-light fw:400">Info@example.com</a></li>
          <li class="nvd-footer-list__list pb:20px c:color-light"> <a class="nvd-footer-list__link op:0.7 c:color-light fw:400">Monday till Friday 10 to 6 EST</a></li>
        </ul>
      </div>
      {% for item in navigation %}
        <div class="col-xs-9 col-sm-6 col-md-5 col-lg-3" component="navigation">
          <h3 class="nvd-footer-list__heading c:color-light fz:14px mb:25px fw:700 tt:uppercase" style="font-family: 'League Spartan', sans-serif;
          ">{{item.title}}</h3>
          <ul class="nvd-footer-list fw:700 pb:25px pl:0 list-style:none">
            {% for item in item.links %}
              <li class="nvd-footer-list__list pb:20px c:color-light"><a class="nvd-footer-list__link op:0.7 c:color-light fw:400" href={{item.href}}>{{item.label}}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
      <div  class="col-xs-9 col-sm-6 col-md-5 col-lg-3">
        <h3 class="nvd-footer-list__heading c:color-light fz:14px mb:25px fw:700 ff:font-quinary tt:uppercase" style="font-family: 'League Spartan', sans-serif;">{{new_letter.title}}</h3>
        <ul class="nvd-footer-list fw:400 pb:25px pl:0 list-style:none">
          <li class="nvd-footer-list__list pb:20px c:color-light"><a class="nvd-footer-list__link op:0.7 c:color-light fw:400" href="#">{{new_letter.name}}</a></li>
        </ul>
        {% form 'customer' %}
          <div class="maw:460px m:auto pos:relative">
            {% if form.errors %}
              {% for field in form.errors %}
                <div>
                  <p>{{ field }} {{ form.errors.messages[field] }}</p>
                </div>
              {% endfor %}
            {% endif %}
            {% if form.posted_successfully? %}
              <div>
                <p>Thanks for subscribing!</p>
              </div>
            {% else %}
              <div class="nvd-footer__input d:flex w:fit-content h:40px c:color-dark bd:none bgc:white">
                <input type="hidden" name="contact[tags]" value="newsletter" />
                <input
                  class="w:162px maw:162px h:38px bd:none! o:none pl:5px bgc:white fz:12px c:color-gray4 fz:12px||placeholder"
                  type="email"
                  name="contact[email]"
                  autocorrect="off"
                  autocapitalize="off"
                  placeholder="Email address"
                />
                <button
                  class="btn-join d:flex ai:center jc:center w:74px h:40px fz:12px fw:600 bgc:#3540DF bgc:#3540DF!|h c:color-light cur:pointer pos:relative fz:12px fw:600 bd:1px_solid_#3540DF bd:1px_solid_#3540DF!|h bdrs:0px"
                  type="submit"
                  aria-label="dasdas"
                >
                  Join
                </button>
              </div>
              <p class="result"></p>
              <p class="result-error"></p>
            {% endif %}
          </div>
        {% endform %}
        <div class="nvd-footer__about h:25px d:flex ai:center mt:20px">
          {% for item in new_letter.icons %}
            <i class="{{item.icon}} ml:10px mr:10px cur:pointer fz:18px c:#030C23 c:color-light|h!"></i>
          {% endfor %}
        </div>
      </div>
      <div class="col-lg-12">
        <p class="nvd-footer__copy-right ff:font-secondary ta:center op:0.7 fz:12px">Â© 2021 BuildApp | All Rights Reserved</p>
      </div>
    </div>
  </div>
</footer>
