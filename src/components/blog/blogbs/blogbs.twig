
{% set uniqueId = "id_bdfea066-da51-47f1-a50a-d2a39af94931" %}
{% if general_settings.background_fixed %}
{% set backgroundFixed = 'fixed' %}
{% else %}
{% set backgroundFixed = 'scroll' %}
{% endif %}
{% if general_settings.background_type == 'color' %}
{% set backgroundColor = 'background-color: ' ~  general_settings.background_color ~  ';' %}
{% else %}
{% set backgroundColor = '' %}
{% endif %}
{% if general_settings.background_type == 'image' %}
{% set backgroundImage = 'background-image: url(' ~  general_settings.background_image ~  ');background-attachment: ' ~  backgroundFixed ~  ';background-size: ' ~  general_settings.background_size ~  ';' %}
{% else %}
{% set backgroundImage = '' %}
{% endif %}
{% set sectionPadding = 'padding-top: ' ~  general_settings.padding.top ~  'px;padding-right: ' ~  general_settings.padding.right ~  'px;padding-bottom: ' ~  general_settings.padding.bottom ~  'px;padding-left: ' ~  general_settings.padding.left ~  'px;' %}

<section data-id="bestseller" css="{{ backgroundColor }}{{ backgroundImage }}{{ sectionPadding }}">
  {% if general_settings.background_overlay_enable %}
    <div class="pos:absolute ins:0 z:-1" css="background-color: {{ general_settings.background_overlay_color }}"></div>
  {% endif %}
  <div class="container pb:40px">
    <h3 class="ff:font-primary ta:center mb:45px fz:40px fw:500" css="{{ heading.design }}">{{ heading.text }}</h3>
    <div class="row">
      {% set collection = collections[content.collection] %}
      <script class="product-all-data" type="application/json">{{ collection.products | json_encode()}}</script>
      {% for product in collection.products | slice(0, 4) %}
        <div class="col-lg-3 mt:0px!">
          <div class="product-card-js d:flex fld:column ai:center ta:center mb:15px pb:15px">
            <script class="product-card-data-js" type="application/json">{{ product | json_encode()}}</script>
            <div class="product-card__img w:100% pos:relative ov:hidden">
              <div class="pet-product-card__image">
                <a href="/pageproduct.html" class="veda-image-cover d:block" css="--aspect-ratio: 3/4">
                  <img class="product-card-image-js" src="{{ product.featured_image.src | img_url('400x')}}" alt="{{ product.title }}">
                </a>
              </div>
              <div class="product-card__add-content product-card-add-js d:flex jc:center ai:center pos:absolute b:0 l:0 w:100% bgc:color-dark h:50px trf:translateY(50px) trs:all_0.3s ta:center lts:0.15px fw:600 fz:17px cur:pointer fz:17px td:none w:100% c:color-light c:color-light!|h us:none">
                {{content.add_to_cart_text}}
              </div>
              <div class="pos:absolute t:5px l:5px d:flex">
                {% if product.compare_at_price > product.price and content.sale.enable %}
                  <div class="product-card-js__sale d:flex jc:center ai:center w:60px h:30px bgc:#219653 mr:5px bdrs:2px">
                    <p class="fz:16px pos:absolute z:10 fw:600 c:color-light">{{ content.sale.text}}</p>
                  </div>
                {% endif %}
              </div>
              <div class="product-card__status pos:absolute t:10px r:10px w:35px h:127px">
                <div class="product-card-js__icon-bg wishlist-toggle-js cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Add to wishlist" data-tooltip-position="left" data-tooltip-active=true data-tooltip-text="Add to wishlist" data-tooltip-active-text="Remove from wishlist">
                  <i class="fal fa-heart"></i>
                </div>
                <div class="product-card-js__icon-bg--hidden quickview-toggle-js cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Quick view" data-tooltip-text="Quick view" data-tooltip-position="left" data-tooltip-active=false >
                  <i class="fal fa-eye"></i>
                </div>
                <div class="product-card-js__icon-bg--hidden compare-toggle-js cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Compare to other products" data-tooltip-position="left" data-tooltip-active=false data-tooltip-text="Add to compare" data-tooltip-active-text="Remove from compare">
                  <i class="fal fa-repeat"></i>
                </div>
              </div>
            </div>


            <div class="product-card-js__content d:flex fld:column jc:center ai:center">
              <div class="product-card-js__brand c:color-gray5 mt:11px fz:14px">{{product.vendor}}</div>
              <a class="product-card-js__name fz:16px mt:15px c:color-dark" href="/pageproduct.html">{{product.title}}</a>
              <a class="product-card-js__price mt:14px" href="#">
                <ins class="product-card-js__cost fw:500 fz:15px c:color-primary td:none">${{ product.price }}.00</ins>
                {% if product.compare_at_price > product.price %}
                  <del class="product-card-js__cost--before fw:500 fz:15px c:#9E9E9E">${{ product.compare_at_price }}.00</del>
                {% endif %}
              </a>

              <div class="product-card-colors-js d:flex">
                <script class="product-card-js__options-json" type="application/json">{{ product.options_with_values | json_encode()}}</script>
              </div>
              <script class="product-card-js__variants-json" type="application/json">{{ product.variants | json_encode()}}</script>

            </div>
          </div>
        </div>
      

{% endfor %}


    </div>

  </div>
</section>
<section class="bgc:#F2F2F7 h:300px d:flex fld:column ai:center jc:center ta:center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 d:flex fld:column ai:center jc:center ta:center">
        <h2 class="fz:pfs(25px,35px) mb:25px fw:500 c:color-dark">Sign-up for LogoNews</h2>
        <p class="fz:pfs(10px,15px) mb:10px fw:400 c:color-dark">Stay informed about the latest style advice and product launches.<br/> Learn more about our emails and our Privacy Policy.</p>
        <div class="d:flex ai:center jc:center ta:center">
         <input class="h:40px w:pfs(150px,283px)! bd:none! bgc:color-light! fw:400 fz:9px ff:font-quinary c:color-gray4! bdrs:0px! bgc:color-light!|h fw:400||placeholder fz:9px||placeholder c:color-gray4!||placeholder" type="text" placeholder="Email address">
         <button class="fz:12px h:40px p:10px_5px_10px_5px p:10px_20px_10px_20px@md ml:10px c:color-light! bgc:color-dark bdrs:0px! bgc:color-dark|h bd:1px_solid_color-dark bd:1px_solid_color-dark!|h ">SUBSCRIBE</button>
        </div>
     </div>
    </div>
  </div>
</section>
