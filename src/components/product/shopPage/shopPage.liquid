{% assign backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% assign backgroundColor = general_settings.background_color_enable ? 'background-color:' | append: general_settings.color | append: ';' : '' %}
{% assign backgroundImage = general_settings.background_image_enable ? 'background-image: url(' | append: general_settings.image | append:
');background-attachment:' | append: backgroundFixed | append: ';background-size:' | append: general_settings.size | append: ';' : '' %}


<section data-id="shoppage" css="{{ backgroundColor }}{{ backgroundImage }}">
  <div class="veda-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  <div class="container pt:35px">
    <div class="direct fz:15px c:color-gray4"><a href="/" class="c:color-gray4">Home</a> > <a href="/product.html" class="c:color-dark">{{ heading.text }}</a></div>
    <div class="view-as mb:20px d:flex ai:center mt:30px fz:15px c:color-dark flw:wrap">
      View as:
      <a href="#" class="yasmina-page-product-view-as1 p:0px_5px_0px_5px bd:1px_solid_color-gray2 c:color-gray2 c:color-gray2!|h ml:10px"><i class="shop-page__view shop-page__view1 fal fa-list"></i></a>
      <a href="#" class="yasmina-page-product-view-as2 p:0px_5px_0px_5px bd:1px_solid_color-gray9  c:color-gray9 c:color-gray9!|h ml:10px"><i class="shop-page__view shop-page__view2 fas fa-th"></i></a>
      <div class="d:flex whs:nowrap ai:center ml:10px ml:455px@md pos:relative mt:10px mt:0px@md">
        <p class="mr:10px fz:15px fw:500">Sort by</p>
        <div class="veda-select">
          <div class="veda-select__view w:190px h:43px bd:1px_solid_color-gray3 pl:15px cur:pointer d:flex ai:center">
            <div class="veda-select__label w:150px cur:pointer d:flex ai:center fz:15px fw:400 c:color-gray4"></div>
            <i class="fal fa-angle-down"></i>
          </div>
          <div class="veda-select__options select-custom pos:absolute t:50px w:190px z:100 bgc:color-light bd:1px_solid_color-gray3">
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="featured" selected>Featured</div>
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="best selling">Best selling</div>
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="alphabetically,a-z">Alphabetically, A-Z</div>
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="alphabetically,z-a">Alphabetically, Z-A</div>
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="price">Price, high to low</div>
          <div class="veda-select__option select-custom__item w:188px h:43px fz:15px fw:400 pl:15px cur:pointer bgc:color-gray3!|h d:flex ai:center bd:none!" value="date">Date, old to new</div>
          </div>
        </div>

      </div>
    </div>
    <div data-id="products" class="row mt:20px ">
      <div class="col-lg-8 shop-page1 pr:40px@md d:block">
        <div class="row">
          {% assign collection = collections[content.collection] %}
          <script class="product-all-data" type="application/json">{{ collection.products | json }}</script>
          {% for product in collection.products limit: 9 %}
            <div class="col-lg-4">
              <div class="yasmina-product-card d:flex fld:column ai:center ta:center mb:15px pb:15px">
                <script class="yasmina-product-card__data" type="application/json">{{ product | json }}</script>
                <div class="yasmina-product-card__img w:100% pos:relative ov:hidden">
                  <div class="pet-product-card__image">
                    <a href="#" class="veda-image-cover d:block" css="--aspect-ratio: 3/4">
                      <img class="yasmina-product-card__image" src="{{ product.featured_image.src | img_url: '400x' }}" alt="{{ product.title }}">
                    </a>
                  </div>
                  <div class="yasmina-product-card__add-content pos:absolute b:0 l:0 w:100% bgc:color-dark h:50px trf:translateY(50px) trs:all_0.3s ta:center lts:0.15px fw:600 fz:17px">
                    <a class="yasmina-product-card__add cur:pointer fz:17px pos:absolute td:none w:100% h:100% va:middle lh:50px t:50% l:50% trf:translate(-50%,-50%) c:color-light">{{content.add_to_cart_text}}</a>
                  </div>
                  <div class="yasmina-product-card__state pos:absolute t:5px l:5px d:flex">
                    {% if product.compare_at_price > product.price and content.sale.enable %}
                      <div class="yasmina-product-card__sale d:flex jc:center ai:center w:60px h:30px bgc:#219653 mr:5px bdrs:2px">
                        <p class="fz:16px pos:absolute z:10 fw:600 c:color-light">{{ content.sale.text }}</p>
                      </div>
                    {% endif %}
                  </div>
                  <div class="yasmina-product-card__status pos:absolute t:10px r:10px w:35px h:127px">
                    <div class="yasmina-product-card__icon-bg cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Add to wishlist" data-tooltip-position="left" data-tooltip-active=false data-tooltip-text="Add to wishlist" data-tooltip-active-text="Remove from wishlist">
                      <i class="fal fa-heart"></i>
                    </div>
                    <div class="yasmina-product-card__icon-bg--hidden cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Quick view" data-tooltip-text="Quick view" data-tooltip-position="left" data-tooltip-active=false >
                      <i class="fal fa-eye"></i>
                    </div>
                    <div class="yasmina-product-card__icon-bg--hidden cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Compare to other products" data-tooltip-position="left" data-tooltip-active="false" data-tooltip-text="Add to compare" data-tooltip-active-text="Remove from compare">
                      <i class="fal fa-repeat"></i>
                    </div>
                  </div>
                </div>


                <div class="yasmina-product-card__content d:flex fld:column jc:center ai:center">
                  <div class="yasmina-product-card__brand c:color-gray5 mt:11px fz:14px">{{product.vendor}}</div>
                  <a class="yasmina-product-card__name fz:16px mt:15px c:color-dark" href="/pageproduct.html">{{product.title}}</a>
                  <a class="yasmina-product-card__price mt:14px" href="#">
                    <ins class="yasmina-product-card__cost fw:500 fz:15px c:color-primary td:none">${{ product.price }}</ins>
                    {% if product.compare_at_price > product.price %}
                      <del class="yasmina-product-card__cost--before fw:500 fz:15px c:#9E9E9E">${{ product.compare_at_price }}</del>
                    {% endif %}
                  </a>

                  <div class="yasmina-product-card__colors d:flex">
                    <script class="yasmina-product-card__options-json" type="application/json">{{ product.options_with_values | json }}</script>
                  </div>
                  <script class="yasmina-product-card__variants-json" type="application/json">{{ product.variants | json }}</script>

                </div>
              </div>
            </div>
          {% endfor %}

          <div class="col-md-12 mb:140px">
            <div class="row row-cols-lg-{{ content.column.lg }} row-cols-md-3 row-cols-sm-2 row-cols-1" component="content">
              <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_color-dark bgc:color-dark c:color-light cur:pointer mr:5px fw:600">1</div>
              <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid bgc:color-light c:color-dark cur:pointer mr:5px fw:600">2</div>
              <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid bgc:color-light c:color-dark cur:pointer mr:5px fw:600">3</div>
              <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid bgc:color-light c:color-dark cur:pointer mr:5px fw:600">4</div>
              <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid bgc:color-light c:color-dark cur:pointer mr:5px"><i class="fas fa-long-arrow-right"></i></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8 pl:40px shop-page2 d:none">
        <div class="row row-cols-lg-12 row-cols-md-12 row-cols-sm-12 row-cols-12 pr:90px" component="content">
          {% assign collection = collections[content.collection] %}

          {% for product in collection.products limit: 4 %}
          <div class="yasmina-product-card d:flex fld:row ai:center ta:center mb:15px pb:15px">
            <script class="yasmina-product-card__data" type="application/json">{{ product | json }}</script>
            <div class="yasmina-product-card__img miw:250px w:250px pos:relative ov:hidden">
              <div class="pet-product-card__image miw:250px w:250px">
                <a href="#" class="veda-image-cover d:block miw:250px w:250px" css="--aspect-ratio: 3/4">
                  <img class="yasmina-product-card__image" src="{{ product.featured_image.src | img_url: '250x' }}" alt="{{ product.title }}">
                </a>
              </div>

              <div class="yasmina-product-card__state pos:absolute t:5px l:5px d:flex">
                {% if product.compare_at_price > product.price and content.sale.enable %}
                  <div class="yasmina-product-card__sale d:flex jc:center ai:center w:60px h:30px bgc:#219653 mr:5px bdrs:2px">
                    <p class="fz:16px pos:absolute z:10 fw:600 c:color-light">{{ content.sale.text}}</p>
                  </div>
                {% endif %}
              </div>
              <div class="yasmina-product-card__status pos:absolute t:10px r:10px w:35px h:127px">
                <div class="yasmina-product-card__icon-bg cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Add to wishlist" data-tooltip-position="left" data-tooltip-active=true data-tooltip-text="Add to wishlist" data-tooltip-active-text="Remove from wishlist">
                  <i class="fal fa-heart"></i>
                </div>
                <div class="yasmina-product-card__icon-bg--hidden cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Quick view" data-tooltip-text="Quick view" data-tooltip-position="left" data-tooltip-active=false >
                  <i class="fal fa-eye"></i>
                </div>
                <div class="yasmina-product-card__icon-bg--hidden cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Compare to other products" data-tooltip-position="left" data-tooltip-active=false data-tooltip-text="Add to compare" data-tooltip-active-text="Remove from compare">
                  <i class="fal fa-repeat"></i>
                </div>
              </div>
            </div>


            <div class="yasmina-product-card__content d:flex fld:column jc:flex-start ai:flex-start h:100% pl:30px">
              <div class="yasmina-product-card__brand c:color-gray5 mt:11px fz:14px">{{product.vendor}}</div>
              <a class="yasmina-product-card__name fz:16px mt:15px c:color-dark" href="/pageproduct.html">{{product.title}}</a>
              <a class="yasmina-product-card__price mt:14px" href="#">
                <ins class="yasmina-product-card__cost fw:500 fz:15px c:color-primary td:none">${{ product.price }}</ins>
                {% if product.compare_at_price > product.price %}
                  <del class="yasmina-product-card__cost--before fw:500 fz:15px c:#9E9E9E">${{ product.compare_at_price }}</del>
                {% endif %}
              </a>

              <div class="yasmina-product-card__colors d:flex">
                <script class="yasmina-product-card__options-json" type="application/json">{{ product.options_with_values | json }}</script>
              </div>
              <script class="yasmina-product-card__variants-json" type="application/json">{{ product.variants | json }}</script>
              <div class="ff:font-secondary fw:300 fz:13px c:color-gray9`     ">
                At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui officia deserunt mollitia animi, id est laborum et dolorum fuga. Et harum quidem rerum facilis est et.
              </div>
              <div class="yasmina-product-card__add-content w:100% bgc:color-dark h:50px trs:all_0.3s ta:center lts:0.15px fw:600 fz:17px pos:relative mt:25px">
                <a class="yasmina-product-card__add cur:pointer fz:17px pos:absolute td:none va:middle lh:50px t:50% l:50% trf:translate(-50%,-50%) c:color-light c:color-light!|h whs:nowrap">ADD TO CART</a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>

      </div>
      <div data-id="yasmina-filter" class="col-lg-4">
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">
          <div class="product-box maw:452px w:100% h:auto bd:1px_solid_color-gray3 p:15px_20px_30px_20px">
            {% for item in product_box %}
              {% if item.type == "search" %}
                <div class="product-box__search mb:15px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Search</h2>
                  <div class="product-box__box-search d:flex ai:center pl:10px bd:1px_solid_color-gray2">
                    <i class="fal fa-search cur:pointer"></i>
                    <input class="h:40px w:90% bd:none! o:none c:color-gray4 fz:15px c:color-gray4||placeholder fz:15px||placeholder" type="text" placeholder="Tìm kiếm">
                  </div>
                </div>
              {% endif %}
              {% if item.type == "refine" %}
                <div class="product-box__refine mb:30px pos:relative">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Refine By</h2>
                  <div class="product-box__content">
                    {% for item in item.item %}
                      <div class="product-box__box-refine pos:relative d:inline-block bd:1px_solid_color-gray2 w:fit-content p:2px_25px_2px_5px cur:pointer c:color-gray4 ff:font-primary">
                        {{item.name}}
                        <i class="fal fa-times pos:absolute t:50% r:1% trf:translate(-50%,-50%) cur:pointer c:color-gray9 c:color-primary!|h"></i>
                      </div>
                    {% endfor %}
                    <a class="c:color-dark pos:absolute t:5px r:0 ff:font-primary" href="#">Clear All</a>
                  </div>

                </div>
              {% endif %}
              {% if item.type == "category" %}
                <div class="product-box__category mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Categories</h2>
                  <ul class="list:unset pl:15px">
                    {% for item in item.item %}
                      <li class="mb:5px">
                        <a class="c:color-dark fz:15px ff:font-primary" href="#">{{item.name}}</a>
                      </li>
                    {% endfor %}

                  </ul>
                </div>
              {% endif %}
              {% if item.type == "color" %}
                <div class="product-box__color mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Màu sắc</h2>
                  <div class="product-box__content">
                    <div class="yasmina-circle__active d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer p:4px bgcp:content-box bgc:#FFD860 bd:1px_solid_color-dark"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:blue bd:none"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:red bd:none"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:green bd:none"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:blue bd:none"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:red bd:none"></div>
                    <div class="yasmina-circle d:inline-block w:50px h:50px bdrs:25px m:10px_6px_0px_6px cur:pointer bgc:green bd:none"></div>
                  </div>

                </div>
              {% endif %}
              {% if item.type == "size" %}
                <div class="product-box__size mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Size</h2>
                  <div class="product-box__content-size d:flex">
                    {% for item in item.item %}
                      <div class="d:flex ai:center jc:center w:40px h:40px bd:1px_solid_color-gray4 p:5px mr:5px ta:center cur:pointer ff:font-primary fz:15px">{{item.name}}</div>
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
              {% if item.type == "brand" %}
                <div class="yasmina-filter__brand mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Brand</h2>
                  <ul class="yasmina-filter__brand-content list:unset pl:15px">
                    {% for item in item.item %}
                      <li class="yasmina-filter-brand-item mb:5px">
                        <a class="c:color-dark fz:15px ff:font-primary" href="#">{{item.name}}</a>
                      </li>
                    {% endfor %}

                  </ul>
                </div>
              {% endif %}
              {% if item.type == "filter" %}
                <div class="product-box__filter mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Filter</h2>
                  <div class="range">
                    <div class="range__drag w:10px h:10px bgc:color-gray9" data-index="0"></div>
                    <div class="range__drag w:10px h:10px bgc:color-gray9" data-index="1"></div>
                    <div class="range__progress bgc:color-gray9 h:5px"></div>
                    <div class="range__bar h:5px"></div>
                  </div>
                </div>
              {% endif %}
              {% if item.type == "availability" %}
                <div class="product-box__availability mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Availability</h2>
                  <ul class="list:unset pl:15px">
                    {% for item in item.item %}
                      <li class="mb:5px">
                        <a class="c:color-dark ff:font-primary" href="#">{{item.name}}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
              {% if item.type == "tag" %}
                <div class="yasmina-filter__tag mb:30px">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Tags</h2>
                  <div class="yasmina-filter__tag-content">
                    {% for item in item.item %}
                      <a href="#" class="product-box__box-tag d:inline-block bd:1px_solid_color-gray2 p:2px_5px_2px_5px mb:10px ta:center cur:pointer ff:font-primary fz:15px c:color-gray9 c:color-gray9!|h mr:5px">{{item.name}}</a>
                    {% endfor %}
                  </div>

                </div>
              {% endif %}
            {% endfor %}


          </div>

        </div>
      </div>
    </div>
  </div>
</section>
