
{% set uniqueId = "id_35aeffc3-bed4-4c7f-bd6b-6044ccabc6a7" %}
{% set backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% set backgroundColor = general_settings.background_color_enable ? 'background-color:' ~  general_settings.color ~  ';' : '' %}
{% set backgroundImage = general_settings.background_image_enable ? 'background-image: url(' ~  general_settings.image ~ ');background-attachment:' ~  backgroundFixed ~  ';background-size:' ~  general_settings.size ~  ';' : '' %}


<section data-id="blogcontainer" class="pt:35px" css="{{ backgroundColor }}{{ backgroundImage }}">
  <div class="veda-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  <div class="container maw:1360px">
    <div class="direct fz:15px c:color-gray4 mb:33px"><a href="/" class="fz:15px c:color-gray4">Home</a> > <a href="#" class="c:color-dark">{{ heading.text }}</a></div>
    <div class="row">
      <div class="col-xs-11 col-sm-11 col-md-9 col-lg-9 pr:50px@md">
        {% set blog = blogs[content.blog] %}
        {% for item in blog.articles %}
          <div class="blog pb:55px fz:15px">
            <a href="#" class="veda-image-cover d:block w:100%" css="--aspect-ratio: 1.6">
              <img class="yasmina-product-card__image" src={{item.image.src | img_url('769x')}} alt="Blog Img">
            </a>
            <div class="blog__infor mt:20px mb:13px">
              <a href="#" class="d:inline-block mr:25px c:color-dark fz:15px fw:400 ff:font-primary"><i class="fal fa-alarm-clock fz:14px d:inline-block mr:5px cur:pointer"></i>{{item.image.updated_at}}</a>
              <a href="#" class="d:inline-block mr:25px c:color-dark fz:15px fw:400 ff:font-primary"><i class="fal fa-archive fz:14px d:inline-block mr:5px cur:pointer"></i>Tips & Tricks</a>
              <a href="#" class="d:inline-block mr:25px c:color-dark fz:15px fw:400 ff:font-primary"><i class="fal fa-gingerbread-man fz:14px d:inline-block mr:5px cur:pointer"></i>Fashion, store, shopify</a>
            </div>
            <a class="blog__title mb:10px mt:10px fz:pfs(20px,35px) c:color-dark ff:font-primary fw:500 cur:pointer">{{item.title}}</a>
            <p class="blog__description fz:14px fw:400 ff:font-secondary c:color-dark mt:3px lh:24px">{{item.content}}</p>
            <button class="vdoan-btn__primary ff:font-primary bgc:color-dark bgc:color-dark!|h bd:none! c:color-light p:17px_81px_17px_81px cur:pointer m:22px_5px_5px_5px fw:500 bdrs:0px! fz:pfs(12px,15px) lts:0.15px ml:0px!">Read More</button>
          </div>
        

{% endfor %}


        <div class="d:flex jc:center">
          <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_color-gray9 bgc:color-dark c:color-light cur:pointer mr:5px fw:600">1</div>
          <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_#DEDEE9 bgc:color-light c:color-dark cur:pointer mr:5px fw:600">2</div>
          <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_#DEDEE9 bgc:color-light c:color-dark cur:pointer mr:5px fw:600">3</div>
          <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_#DEDEE9 bgc:color-light c:color-dark cur:pointer mr:5px fw:600">4</div>
          <div class="w:50px h:50px d:flex ai:center jc:center fz:15px ff:font-secondary bd:1px_solid_#DEDEE9 bgc:color-light c:color-dark cur:pointer mr:5px"><i class="far fa-arrow-right"></i></div>
        </div>
      </div>
      <div class="col-xs-11 col-sm-11 col-md-3 col-lg-3 d:flex jc:center">
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1">
          <div class="product-box maw:330px w:100% h:fit-content bd:1px_solid_color-gray2 p:15px_30px_30px_30px">
            <form action="{{ routes.search_url }}">
              <div class="product-box__search mb:15px">
                <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Search</h2>
                <div class="product-box__box-search d:flex ai:center bd:1px_solid_color-gray2">
                  <button class="p:10px bd:1px_solid_color-light bd:1px_solid_color-light|h! bgc:color-light! c:color-gray9! bgc:color-light|h! c:color-gray9|h!" type="submit"><i class="fal fa-search cur:pointer"></i></button>
                  <input class="h:40px! w:90%! bd:none! o:none c:color-gray4 fz:15px c:color-gray4||placeholder pl:0px! fz:15px||placeholder" type="text"
                  placeholder="Search"
                  name="q"
                  value="{{ search.terms | escape }}"
                  />
                  <input type="hidden" name="type" value="product,page" />
                  <input type="hidden" name="options[unavailable_products]" value="hide" />
                  <input type="hidden" name="options[prefix]" value="last" />


                </div>
              </div>
            </form>
            {% for item in product_box %}
              {% if item.type == "popular-post" %}
                <div class="product-box__popular-post mt:10px mb:10px">
                  <h2 class="product-box__title fz:20px fw:500 mt:15px mb:15px ff:font-primary">Popular Post</h2>
                  <div class="product-box__content fz:15px d:flex fld:column ai:flex-start">
                    {% for item in item.item %}
                      <a href="#" class="product-box__box-post mb:30px d:flex jc:center ai:flex-start">
                        <img src={{item.srcImg | img_url('')}} alt="">
                        <h2 class="ml:20px fw:500 c:color-dark fz:15px">{{item.title}}</h2>
                      </a>
                    



{% endfor %}


                  </div>
                  <a href="#" class="veda-image-cover d:block" css="--aspect-ratio: 1.6">
                    <img class="yasmina-product-card__image" src="../../img/post4.png">
                  </a>
                </div>

              {% endif %}
              {% if item.type == "tag" %}
                <div class="product-box__tag mb:30px">
                  <h2 class="product-box__title fz:20px mt:20px fw:500 mb:15px ff:font-primary">Tags</h2>
                  <div class="product-box__content">
                    {% for item in item.item %}
                      <a href="#" class="product-box__box-tag d:inline-block bd:1px_solid_color-gray2 p:2px_5px_2px_5px mb:10px ta:center cur:pointer ff:font-primary fz:15px c:color-dark c:color-dark!|h">{{item.name}}</a>
                    



{% endfor %}


                  </div>
                </div>
              {% endif %}
              {% if item.type == "newsletter" %}
                <div class="product-box__newsletter">
                  <h2 class="product-box__title fz:20px fw:500 mb:15px ff:font-primary">Newsletter Signup</h2>
                  <div class="product-box__content">
                    <p class="fz:13px ff:font-secondary c:color-dark">At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint.</p>
                    <div class="product-box__box-newsletter mt:10px d:flex flw:nowrap w:100% h:43px bd:1px_solid_color-gray2 mt:20px">
                      <input class="bd:none! o:none w:70% h:100% bdend:1px_solid_gray3! c:color-gray3 c:color-gray3||placeholder! fz:15px! fz:15px||pl! fw:400 fw:400||placeholder! ff:font-primary!" type="text" placeholder="Your email">
                      <button class="fz:15px fw:500 ff:font-primary bdrs:0 w:30% h:100% bgc:color-dark bgc:color-dark!|h c:color-light bd:none">GET!</button>
                    </div>
                  </div>
                </div>
              {% endif %}
            

{% endfor %}



          </div>

        </div>
      </div>
    </div>

  </div>
</section>

