
{% set uniqueId = "id_e7652265-cbd8-4b93-8fa0-d5c0ffb755fd" %}
{% set backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% set backgroundColor = general_settings.background_color_enable ? 'background-color:' ~  general_settings.color ~  ';' : '' %}
{% set backgroundImage = general_settings.background_image_enable ? 'background-image: url(' ~  general_settings.image ~ 
');background-attachment:' ~  backgroundFixed ~  ';background-size:' ~  general_settings.size ~  ';' : '' %}


<section data-id="hero" class="veda-section" css="{{ backgroundColor }}{{ backgroundImage }}" >
  <div class="core-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div component="content" class="row row-cols-lg-12 row-cols-md-12 row-cols-sm-12 row-cols-12">
          {% set collection = collections[content.collection] %}
          <div class="vdoan-banner vdoan-banner--{{content.direction}} c:{{content.color}} mih:626px pos:relative ml:-15px mr:-15px">
            <div class="vdoan-banner__content d:flex fld:column jc:center ai:center w:50% ta:center z:9">
              <p class="vdoan-banner__text fw:500 fz:20px">{{content.title}}</p>
              <div class="vdoan-banner__title c:{{content.color}} fw:700 fz:50px">INSTILEY</div>
              <p class="vdoan-banner__description ff:font-secondary mb:30px">
                {{content.description}}
              </p>
              <div class="vdoan-btn__container">
                {% for item in content.button %}
                  {% if content.color == "black" %}
                    <button class="vdoan-btn__primary">{{item.name}}</button>
                  {% endif %}
                  {% if content.color == "white" %}
                    <button class="vdoan-btn__secondary">{{item.name}}</button>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            {% if banner.stickey %}
              <div class="vdoan-banner__stickey">
                <div class="vdoan-banner__rectangle">{{content.stickey}}</div>
                <div class="vdoan-banner__triangle--left"></div>
                <div class="vdoan-banner__triangle--right"></div>
              </div>

            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
