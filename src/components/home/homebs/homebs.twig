
{% set uniqueId = "id_81549559-426b-4ba5-8658-c89fa2f4f49e" %}
{% set backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% set backgroundColor = general_settings.background_color_enable ? 'background-color:' ~  general_settings.color ~  ';' : '' %}
{% set backgroundImage = general_settings.background_image_enable ? 'background-image: url(' ~  general_settings.image ~ ');background-attachment:' ~  backgroundFixed ~  ';background-size:' ~  general_settings.size ~  ';' : '' %}


<section data-id="bestseller" class="pt:80px" css="{{ backgroundColor }}{{ backgroundImage }}">
  <div class="veda-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  <div class="container">
    <h3 class="ff:font-primary ta:center mb:45px fz:40px fw:500" css="{{ heading.design }}">{{ heading.text }}</h3>
    <div class="row pos:relative">
      <div
          class="veda-swiper"
          data-options="{
            speed: 400,
            spaceBetween: 20,
            centeredSlides: false,
            slidesPerView: 4,
            touchRatio: 0.3,
            slideToClickedSlide: true,
          }"
        >
          <div class="swiper">
            <div class="swiper-wrapper">
              {% set collection = collections[content.collection] %}
              <script class="product-all-data" type="application/json">{{ collection.products | json_encode()}}</script>
              {% for product in collection.products | slice(0, 6) %}
                <div component="swipers" class="swiper-slide col-lg-3 mt:0px!">
                  <div class="yasmina-product-card d:flex fld:column ai:center ta:center mb:15px pb:15px">
                    <script class="yasmina-product-card__data" type="application/json">{{ product | json_encode()}}</script>
                    <div class="yasmina-product-card__img w:100% pos:relative ov:hidden">
                      <div class="pet-product-card__image">
                        <a href="/pageproduct.html" class="veda-image-cover d:block" css="--aspect-ratio: 3/4">
                          <img class="yasmina-product-card__image" src="{{ product.featured_image.src | img_url('400x')}}" alt="{{ product.title }}">
                        </a>
                      </div>
                      <div class="yasmina-product-card__add-content pos:absolute b:0 l:0 w:100% bgc:color-dark h:50px trf:translateY(50px) trs:all_0.3s ta:center lts:0.15px fw:600 fz:17px">
                        <a class="yasmina-product-card__add cur:pointer fz:17px pos:absolute td:none w:100% h:100% va:middle lh:50px t:50% l:50% trf:translate(-50%,-50%) c:color-light c:color-light!|h">{{content.add_to_cart_text}}</a>
                      </div>
                      <div class="yasmina-product-card__state pos:absolute t:5px l:5px d:flex">
                        {% if product.compare_at_price > product.price and content.sale.enable %}
                          <div class="yasmina-product-card__sale d:flex jc:center ai:center w:60px h:30px bgc:#219653 mr:5px bdrs:2px">
                            <p class="fz:16px pos:absolute z:10 fw:600 c:color-light">{{ content.sale.text}}</p>
                          </div>
                        {% endif %}
                      </div>
                      <div class="yasmina-product-card__status pos:absolute t:10px r:10px w:35px h:127px">
                        <div class="yasmina-product-card__icon-bg cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Add to wishlist" data-tooltip-position="left" data-tooltip-active=true data-tooltip-text="Add to wishlist" data-tooltip-active-text="Remove from wishlist">
                          <i class="fal fa-heart"></i>
                        </div>
                        <div class="yasmina-product-card__icon-bg--hidden cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Quick view" data-tooltip-text="Quick view" data-tooltip-position="left" data-tooltip-active=false >
                          <i class="fal fa-eye"></i>
                        </div>
                        <div class="yasmina-product-card__icon-bg--hidden veda-compare__btn-toggle cur:pointer bgc:color-dark!|h c:color-light!|h" data-tooltip="Compare to other products" data-tooltip-position="left" data-tooltip-active=false data-tooltip-text="Add to compare" data-tooltip-active-text="Remove from compare">
                          <i class="fal fa-repeat"></i>
                        </div>
                      </div>
                    </div>


                    <div class="yasmina-product-card__content d:flex fld:column jc:center ai:center">
                      <div class="yasmina-product-card__brand c:color-gray5 mt:11px fz:14px">{{product.vendor}}</div>
                      <a class="yasmina-product-card__name fz:16px mt:15px c:color-dark" href="/pageproduct.html">{{product.title}}</a>
                      <a class="yasmina-product-card__price mt:14px" href="#">
                        <ins class="yasmina-product-card__cost fw:500 fz:15px c:color-primary td:none">${{ product.price }}.00</ins>
                        {% if product.compare_at_price > product.price %}
                          <del class="yasmina-product-card__cost--before fw:500 fz:15px c:#9E9E9E">${{ product.compare_at_price }}.00</del>
                        {% endif %}
                      </a>

                      <div class="yasmina-product-card__colors d:flex">
                        <script class="yasmina-product-card__options-json" type="application/json">{{ product.options_with_values | json_encode()}}</script>
                      </div>
                      <script class="yasmina-product-card__variants-json" type="application/json">{{ product.variants | json_encode()}}</script>

                    </div>
                  </div>
                </div>
              

{% endfor %}


            </div>
          </div>
          <div class="swiper-button-prev d:flex ai:center t:36%! l:-15px! jc:center bgc:color-light! w:47px h:47px bdrs:50% bd:1px_solid_color-gray3 z:1000 cur:pointer! cnt:()||af! bg:color-light! " style="background: white !important;"><i class="fal fa-arrow-left c:color-gray9 fz:18px "></i></div>
          <div class="swiper-button-next d:flex ai:center t:36%! r:-15px! jc:center bgc:color-light! w:47px h:47px bdrs:50% bd:1px_solid_color-gray3 z:1000 cur:pointer! cnt:()||af! bg:color-light!" style="background: white !important;"><i class="fal fa-arrow-right c:color-gray9 fz:18px"></i></div>
      </div>


    </div>

  </div>
</section>
